{
	"name": "simplified-traditional-chinese-translator",
	"version": "1.0.0",
	"description": "桌面应用：简繁转换工具",
	"main": "src/main/main.js",
	"scripts": {
		"dev": "electron .",
		"build": "electron-builder",
		"build:win": "electron-builder --win",
		"build:mac": "electron-builder --mac",
		"pack:win": "electron-packager . Chinese-Converter --platform=win32 --arch=x64 --out=dist --overwrite",
		"build:linux": "electron-builder --linux",
		"start": "pnpm run dev"
	},
	"keywords": [
		"electron",
		"vue",
		"简繁转换",
		"traditional-chinese",
		"simplified-chinese"
	],
	"author": "Your Name",
	"license": "MIT",
	"devDependencies": {
		"electron": "^27.0.0",
		"electron-builder": "^24.6.4",
		"electron-packager": "^17.1.2"
	},
	"dependencies": {
		"opencc-js": "^1.0.5",
		"vue": "^3.3.4"
	},
	"build": {
		"appId": "com.example.simplified-traditional-chinese-translator",
		"productName": "Chinese-Converter",
		"directories": {
			"output": "dist"
		},
		"files": [
			"src/**/*",
			"node_modules/**/*"
		],
		"win": {
			"target": "dir",
			"artifactName": "${productName}-${version}-win-${arch}"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true,
			"shortcutName": "Chinese Converter",
			"displayLanguageSelector": true,
			"installerLanguages": [
				"en_US",
				"zh_CN"
			]
		},
		"mac": {
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64",
						"arm64"
					]
				},
				{
					"target": "dir",
					"arch": [
						"x64",
						"arm64"
					]
				}
			],
			"category": "public.app-category.productivity",
			"artifactName": "${productName}-${version}-mac-${arch}.${ext}",
			"icon": "assets/icon.png"
		},
		"linux": {
			"target": "AppImage",
			"icon": "assets/icon.png"
		}
	}
}
